# ===========================================
# 鹦鹉管理系统 - 环境配置文件
# ===========================================

# ===========================================
# 应用配置
# ===========================================
APP_NAME=鹦鹉管理系统 API
APP_VERSION=1.0.0
DEBUG=false  # 生产环境设为 false

# ===========================================
# 数据库配置 (3选1)
# ===========================================

# 1. SQLite (开发环境)
# DATABASE_URL=sqlite:///./parrot_management.db

# 2. MySQL (推荐生产环境)
# DATABASE_URL=mysql+pymysql://用户名:密码@localhost:3306/数据库名
# 示例:
# DATABASE_URL=mysql+pymysql://root:password123@localhost:3306/parrot_management

# 3. PostgreSQL (推荐生产环境)
# DATABASE_URL=postgresql://用户名:密码@localhost:5432/数据库名
# 示例:
# DATABASE_URL=postgresql://postgres:password123@localhost:5432/parrot_management

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=524288000  # 500MB (字节)
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,mp4,mov,avi,mkv,webm

# ===========================================
# CORS配置
# ===========================================
# 开发环境: http://localhost:5173
# 生产环境: 你的域名，如 https://yourdomain.com
CORS_ORIGINS=["http://localhost:5173", "https://yourdomain.com"]

# ===========================================
# 分页配置
# ===========================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ===========================================
# 生产环境安全配置
# ===========================================
# SECRET_KEY=你的随机密钥(生产环境必填)
# ACCESS_TOKEN_EXPIRE_MINUTES=30
