.filter-drawer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
}

.filter-drawer.show {
  visibility: visible;
}

.filter-drawer.show .mask {
  opacity: 1;
}

.filter-drawer.show .drawer-content {
  transform: translateY(0);
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.drawer-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  transform: translateY(100%);
  transition: transform 0.3s;
  max-height: 70vh;
  overflow-y: auto;
}

.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.drawer-header .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e293b;
}

.drawer-header .reset {
  font-size: 28rpx;
  color: #667eea;
}

.filter-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #64748b;
  transition: all 0.2s;
}

.tag.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.drawer-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.drawer-footer button {
  flex: 1;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.price-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
}

.price-input:focus {
  border-color: #667eea;
  background: #fff;
}

.price-separator {
  font-size: 28rpx;
  color: #94a3b8;
  margin: 0 8rpx;
}
