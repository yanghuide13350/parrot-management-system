.parrot-card {
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-image {
  position: relative;
  width: 100%;
  height: 200rpx;
  background: #f1f5f9;
}

.card-image image {
  width: 100%;
  height: 100%;
}

.card-image.no-image {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.card-image.has-video {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.placeholder-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
  padding: 32rpx;
  box-sizing: border-box;
}

.status-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
}

.status-available {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}
.status-sold {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}
.status-breeding {
  background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
}
.status-paired {
  background: linear-gradient(135deg, #74b9ff 0%, #5b9bd5 100%);
}
.status-incubating {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
}

.video-badge {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #fff;
}

.video-icon {
  font-size: 16rpx;
}

.card-info {
  padding: 12rpx 16rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-meta {
  font-size: 22rpx;
  color: #64748b;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-meta .gender {
  margin-right: 12rpx;
}

.card-meta .ring {
  color: #94a3b8;
}

.card-price {
  font-size: 24rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  min-height: 28rpx;
}
