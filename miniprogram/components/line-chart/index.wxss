.chart-container {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 12px;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.chart-tabs {
  display: flex;
  background: #f1f5f9;
  border-radius: 8rpx;
  padding: 8rpx;
}

.tab {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #64748b;
  border-radius: 8rpx;
}

.tab.active {
  background: #fff;
  color: #667eea;
  font-weight: 500;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
}
