.page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.photo-swiper {
  width: 100%;
  height: 500rpx;
}

.photo-swiper image {
  width: 100%;
  height: 100%;
}

.no-photo {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.camera-icon {
  position: relative;
  width: 100rpx;
  height: 80rpx;
}

.camera-body {
  width: 100rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  position: absolute;
  bottom: 0;
}

.camera-lens {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  position: absolute;
  bottom: 15rpx;
  left: 50%;
  transform: translateX(-50%);
}

.info-card {
  margin: -40rpx 24rpx 24rpx;
  padding: 32rpx;
  position: relative;
  z-index: 10;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.breed {
  font-size: 40rpx;
  font-weight: 600;
  color: #1e293b;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-available {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}
.status-sold {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  color: #64748b;
  font-size: 28rpx;
}

.info-row .value {
  color: #1e293b;
  font-size: 28rpx;
}

.info-row .value.price {
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.share-btn {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  right: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
}

.error-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.error-icon-wrap {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
}

.error-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.error-x {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  color: #fff;
  font-weight: 300;
}

.error-text {
  font-size: 28rpx;
  color: #94a3b8;
}
