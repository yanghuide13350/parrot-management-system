<view class="page">
  <view class="header">
    <view class="avatar">
      <view class="avatar-icon"></view>
    </view>
    <view class="title">鹦鹉管理系统</view>
  </view>
  
  <view class="menu-list">
    <view class="menu-item glass-card" bindtap="goBreeding">
      <view class="menu-icon icon-breeding"></view>
      <text class="menu-text">种鸟管理</text>
      <text class="menu-arrow">›</text>
    </view>
    <view class="menu-item glass-card" bindtap="goIncubation">
      <view class="menu-icon icon-egg"></view>
      <text class="menu-text">孵化记录</text>
      <text class="menu-arrow">›</text>
    </view>
    <view class="menu-item glass-card" bindtap="showSettings">
      <view class="menu-icon icon-settings"></view>
      <text class="menu-text">设置</text>
      <text class="menu-arrow">›</text>
    </view>
    <view class="menu-item glass-card" bindtap="clearCache">
      <view class="menu-icon icon-trash"></view>
      <text class="menu-text">清除缓存</text>
      <text class="menu-arrow">›</text>
    </view>
  </view>
  
  <view class="version">v1.0.0</view>
</view>

<view class="modal {{showSettingsModal ? 'show' : ''}}" catchtouchmove="true">
  <view class="modal-mask" bindtap="hideSettings"></view>
  <view class="modal-content">
    <view class="modal-title">设置</view>
    <view class="form-item">
      <text class="form-label">API 地址</text>
      <input placeholder="https://your-api.com/api" value="{{baseUrl}}" bindinput="onBaseUrlInput" />
    </view>
    <view class="modal-footer">
      <button class="btn-outline" bindtap="hideSettings">取消</button>
      <button class="btn-primary" bindtap="saveSettings">保存</button>
    </view>
  </view>
</view>
