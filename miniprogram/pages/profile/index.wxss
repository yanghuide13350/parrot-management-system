.page {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 50%;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.menu-list {
  padding: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
}

.icon-breeding {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}

.icon-egg {
  background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
}

.icon-settings {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.icon-trash {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #1e293b;
}

.menu-arrow {
  font-size: 32rpx;
  color: #94a3b8;
}

.version {
  text-align: center;
  color: #94a3b8;
  font-size: 24rpx;
  margin-top: 48rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
}

.modal.show {
  visibility: visible;
}

.modal.show .modal-mask {
  opacity: 1;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 32rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
}

.form-item input {
  width: 100%;
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.modal-footer button {
  flex: 1;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
}
