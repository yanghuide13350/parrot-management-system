.page {
  min-height: 100vh;
  padding-bottom: 180rpx;
}

.photo-swiper {
  width: 100%;
  height: 500rpx;
}

.photo-swiper image {
  width: 100%;
  height: 100%;
}

.photo-swiper video {
  width: 100%;
  height: 100%;
}

.no-photo {
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.camera-icon {
  position: relative;
  width: 100rpx;
  height: 80rpx;
}

.camera-body {
  width: 100rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  position: absolute;
  bottom: 0;
}

.camera-lens {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  position: absolute;
  bottom: 15rpx;
  left: 50%;
  transform: translateX(-50%);
}

.info-card {
  margin: -40rpx 24rpx 24rpx;
  padding: 32rpx;
  position: relative;
  z-index: 10;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.breed {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
}

.status-available {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}
.status-sold {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}
.status-breeding {
  background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
}
.status-paired {
  background: linear-gradient(135deg, #74b9ff 0%, #5b9bd5 100%);
}
.status-incubating {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
}

.info-row .label {
  color: #64748b;
  font-size: 26rpx;
}

.info-row .value {
  color: #1e293b;
  font-size: 26rpx;
  font-weight: 500;
}

.info-row .value.price {
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.section {
  margin: 0 24rpx 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.timeline {
  padding-left: 16rpx;
}

.timeline-item {
  position: relative;
  padding-left: 28rpx;
  padding-bottom: 24rpx;
  border-left: 2rpx solid #e2e8f0;
  margin-left: 8rpx;
}

.timeline-item:last-child {
  border-left: 2rpx solid transparent;
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -9rpx;
  top: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.timeline-dot.birth {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
}
.timeline-dot.system {
  background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
}
.timeline-dot.sale {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}
.timeline-dot.return {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}
.timeline-dot.follow_up {
  background: linear-gradient(135deg, #74b9ff 0%, #5b9bd5 100%);
}

.timeline-content {
  background: #f8fafc;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.timeline-title {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 500;
}

.timeline-desc {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 6rpx;
  line-height: 1.5;
}

.timeline-date {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 6rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  z-index: 100;
}

.action-bar button {
  flex: 1;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 48rpx;
}

.btn-outline.danger {
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 48rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
}

.modal.show {
  visibility: visible;
}

.modal.show .modal-mask {
  opacity: 1;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 32rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item textarea {
  width: 100%;
  height: 84rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-item textarea {
  height: 160rpx;
  padding: 20rpx;
  width: 100%;
}

.picker-value {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.modal-footer button {
  flex: 1;
}

.share-section {
  margin: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.share-section .section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.share-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.share-item {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
}

.share-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.share-date {
  font-size: 24rpx;
  color: #64748b;
}

.share-expires {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.share-url {
  font-size: 22rpx;
  color: #94a3b8;
  word-break: break-all;
  margin-bottom: 12rpx;
}

.share-actions {
  display: flex;
  justify-content: flex-end;
}

.copy-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.seller-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.seller-tag {
  padding: 8rpx 24rpx;
  background: #f1f5f9;
  color: #64748b;
  font-size: 24rpx;
  border-radius: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.seller-tag.active {
  background: #eef2ff;
  color: #667eea;
  border-color: #667eea;
  font-weight: 500;
}
