.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 160rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 16rpx;
  gap: 12rpx;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
}

.search-icon-wrap {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-circle {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #94a3b8;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
}

.search-handle {
  width: 10rpx;
  height: 3rpx;
  background: #94a3b8;
  position: absolute;
  bottom: 4rpx;
  right: 2rpx;
  transform: rotate(45deg);
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.filter-btn {
  position: relative;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #64748b;
}

.filter-btn.has-filter {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.filter-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #ff6b6b;
  color: #fff;
  font-size: 20rpx;
  border-radius: 50%;
}

.list-container {
  flex: 1;
  padding: 0 16rpx;
}

.waterfall {
  display: flex;
  gap: 12rpx;
}

.waterfall-col {
  flex: 1;
}

.load-more {
  text-align: center;
  padding: 24rpx;
  color: #94a3b8;
  font-size: 24rpx;
}

.fab {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
}

.fab text {
  font-size: 56rpx;
  color: #fff;
  line-height: 1;
}
