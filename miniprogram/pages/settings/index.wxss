.settings-page {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 当前环境 */
.current-env {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: white;
}

.env-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.env-url {
  font-size: 24rpx;
  opacity: 0.9;
  word-break: break-all;
}

/* 环境列表 */
.env-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.env-item {
  position: relative;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.env-item.active {
  border-color: #667eea;
  background: #f0f4ff;
}

.env-item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.env-item-url {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.env-item-icon {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 40rpx;
  height: 40rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 自定义地址 */
.custom-url {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.custom-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.btn-apply {
  padding: 20rpx 30rpx;
  background: #667eea;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-apply::after {
  border: none;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-action {
  padding: 24rpx;
  background: white;
  border: 2rpx solid #667eea;
  color: #667eea;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-action::after {
  border: none;
}

.btn-reset {
  border-color: #ff6b6b;
  color: #ff6b6b;
}

/* 提示信息 */
.tips {
  background: #fff9e6;
  border-left: 4rpx solid #ffc107;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #f57c00;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
}
