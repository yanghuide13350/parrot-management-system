<view class="page">
  <view class="tip">选择一只{{isMale ? '母' : '公'}}鸟进行配对</view>

  <view class="list">
    <view
      class="mate-card glass-card"
      wx:for="{{mates}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="selectMate"
    >
      <view class="card-info">
        <view class="breed">{{item.breed}}</view>
        <view class="meta">{{item.ring_number || '无圈号'}}</view>
      </view>
      <view class="select-btn">选择</view>
    </view>

    <view class="empty-state" wx:if="{{!mates.length && !loading}}">
      <text class="empty-text">暂无可配对{{isMale ? '母' : '公'}}鸟</text>
    </view>
  </view>
</view>
