.page {
  min-height: 100vh;
  padding: 24rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
}

.filter-bar {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f1f5f9;
  border-radius: 24rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #475569;
  margin-right: 8rpx;
}

.filter-icon {
  font-size: 20rpx;
  color: #94a3b8;
}

.quick-filters {
  display: flex;
  gap: 12rpx;
}

.quick-filter-item {
  padding: 12rpx 24rpx;
  background: #e2e8f0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #475569;
}

.filter-drawer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-drawer.show {
  max-height: 800rpx;
}

.filter-content {
  padding: 32rpx;
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
}

.filter-value {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
}

.filter-input {
  padding: 20rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.filter-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.filter-btn.reset {
  background: #f1f5f9;
  color: #64748b;
}

.filter-btn.apply {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.breeding-card {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  padding-top: 48rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f1f5f9;
}

.breeding-card.status-breeding {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-color: #fde68a;
}

.breeding-card.status-paired {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-color: #bfdbfe;
}

.breeding-card.status-incubating {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  border-color: #86efac;
}

.breed {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.meta {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.mate-info {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  border-radius: 16rpx;
  gap: 12rpx;
  border: 2rpx solid #fecaca;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.1);
}

.mate-icon {
  color: #ef4444;
  font-size: 28rpx;
}

.mate-text {
  font-size: 26rpx;
  color: #dc2626;
  flex: 1;
  font-weight: 500;
}

.mate-duration {
  font-size: 24rpx;
  color: #991b1b;
  font-weight: 600;
}

.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.status-tag {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  padding: 8rpx 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-breeding {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
}
.status-paired {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
}
.status-incubating {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  color: #065f46;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
  color: #4b5563;
  width: 150rpx;
  font-weight: 600;
  text-align: center;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s;
  box-sizing: border-box;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-btn.pair {
  border-color: #667eea;
  color: #667eea;
}

.action-btn.remove {
  border-color: #94a3b8;
  color: #94a3b8;
}

.action-btn.unpair {
  border-color: #ef4444;
  color: #ef4444;
}

.action-btn.incubation {
  border-color: #f59e0b;
  color: #f59e0b;
}

.action-btn.view-incubation {
  border-color: #10b981;
  color: #10b981;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
  text-align: center;
}

.incubation-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.dialog-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
  text-align: center;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.dialog-body {
  padding: 32rpx;
}

.dialog-footer {
  display: flex;
  border-top: 2rpx solid #f1f5f9;
}

.dialog-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  background: transparent;
}

.dialog-btn.cancel {
  color: #64748b;
  border-right: 2rpx solid #f1f5f9;
}

.dialog-btn.confirm {
  color: #667eea;
}
