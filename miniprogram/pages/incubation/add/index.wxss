@import "../../parrot/add/index.wxss";

.page-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: -24rpx -24rpx 24rpx -24rpx;
  border-radius: 0 0 32rpx 32rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  text-align: center;
}

.auto-hint {
  padding: 0 24rpx;
  margin-top: -8rpx;
  margin-bottom: 8rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #94a3b8;
  font-style: italic;
}
