.page {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 160rpx;
  background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);
}

.filter-bar {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.filter-text {
  font-size: 28rpx;
  color: #fff;
  margin-right: 8rpx;
  font-weight: 500;
}

.filter-icon {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
}

.quick-filters {
  display: flex;
  gap: 12rpx;
}

.quick-filter-item {
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 28rpx;
  font-size: 28rpx;
  color: #64748b;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-drawer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.filter-drawer.show {
  max-height: 1000rpx;
}

.filter-content {
  padding: 32rpx;
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.filter-value {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  border: 2rpx solid #e2e8f0;
}

.filter-input {
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1e293b;
  border: 2rpx solid #e2e8f0;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.filter-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-btn.reset {
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  color: #64748b;
}

.filter-btn.apply {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.incubation-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  padding: 32rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  position: relative;
  overflow: hidden;
}

.incubation-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.status-badge {
  padding: 12rpx 28rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.status-badge::before {
  content: '‚óè';
  font-size: 20rpx;
}

.status-incubating {
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
}

.status-hatched {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.status-failed {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.status-completed {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.start-date {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.start-date::before {
  content: 'üìÖ';
  font-size: 24rpx;
}

.incubation-days {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #92400e;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(251, 191, 36, 0.3);
}

.incubation-days::before {
  content: '‚è±Ô∏è';
  font-size: 24rpx;
}

.card-body {
  margin-bottom: 24rpx;
}

.parents {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.parent-item {
  flex: 1;
  min-width: 280rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.parent-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
}

.parent-value {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  flex: 1;
}

.eggs-info {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.eggs-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #1e40af;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
}

.eggs-count::before {
  content: 'ü•ö';
  font-size: 24rpx;
}

.hatched-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #065f46;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.2);
}

.hatched-count::before {
  content: 'üê£';
  font-size: 24rpx;
}

.hatch-rate {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #92400e;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(251, 191, 36, 0.2);
}

.hatch-rate::before {
  content: 'üìä';
  font-size: 24rpx;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f1f5f9;
}

.action-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.delete-btn {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.complete-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.4);
}

.fab {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.5);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.5);
  }
  50% {
    box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.8);
  }
  100% {
    box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.5);
  }
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}

.update-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.dialog-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
  text-align: center;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.dialog-body {
  padding: 32rpx;
}

.dialog-footer {
  display: flex;
  border-top: 2rpx solid #f1f5f9;
}

.dialog-btn {
  flex: 1;
  padding: 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  background: transparent;
}

.dialog-btn.cancel {
  color: #64748b;
  border-right: 2rpx solid #f1f5f9;
}

.dialog-btn.confirm {
  color: #667eea;
}

.dialog-body .form-item {
  margin-bottom: 24rpx;
}

.dialog-body .form-label {
  display: block;
  font-size: 28rpx;
  color: #1e293b;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.dialog-body .required {
  color: #ef4444;
  margin-right: 4rpx;
}

.dialog-body input {
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  border: 2rpx solid #e2e8f0;
}

.dialog-body .hint-text {
  font-size: 26rpx;
  color: #64748b;
  margin-top: 16rpx;
  text-align: center;
}

.dialog-body .complete-hint {
  color: #10b981;
  font-weight: 500;
}
