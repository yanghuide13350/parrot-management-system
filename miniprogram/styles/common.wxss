.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.gradient-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.flex {
  display: flex;
}
.flex-col {
  flex-direction: column;
}
.items-center {
  align-items: center;
}
.justify-center {
  justify-content: center;
}
.justify-between {
  justify-content: space-between;
}
.flex-1 {
  flex: 1;
}
.flex-wrap {
  flex-wrap: wrap;
}

.text-center {
  text-align: center;
}
.text-primary {
  color: #1e293b;
}
.text-secondary {
  color: #64748b;
}
.text-hint {
  color: #94a3b8;
}
.text-white {
  color: #ffffff;
}

.font-bold {
  font-weight: 600;
}
.text-sm {
  font-size: 24rpx;
}
.text-base {
  font-size: 28rpx;
}
.text-lg {
  font-size: 32rpx;
}
.text-xl {
  font-size: 36rpx;
}

.mb-sm {
  margin-bottom: 16rpx;
}
.mb-md {
  margin-bottom: 24rpx;
}
.mb-lg {
  margin-bottom: 32rpx;
}

.rounded-lg {
  border-radius: 32rpx;
}
.rounded-full {
  border-radius: 9999rpx;
}

.shadow-md {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 9999rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.status-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
  font-size: 22rpx;
  color: #ffffff;
}

.status-available {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
}
.status-sold {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}
.status-breeding {
  background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #94a3b8;
}
